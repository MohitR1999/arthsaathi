{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },

    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },

    "lint": {
      "dependsOn": ["^lint"]
    },

    "lint-fix": {
      "dependsOn": ["^lint-fix"]
    },

    "test": {
      "dependsOn": ["^test"]
    }
  }
}
